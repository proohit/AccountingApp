{
    "openapi": "3.0.2",
    "info": {
        "title": "Accounting App Backend Api",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:3002/api"
        }
    ],
    "components": {
        "schemas": {
            "User": {
                "$ref": "./models/User.json"
            },
            "Wallet": {
                "$ref": "./models/Wallet.json"
            },
            "Record": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "description": {
                        "type": "string"
                    },
                    "value": {
                        "type": "number"
                    },
                    "timestamp": {
                        "type": "string",
                        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}$"
                    },
                    "owner": {
                        "$ref": "../accountingapp.json#/components/schemas/User"
                    }
                }
            }
        }
    },
    "paths": {}
}